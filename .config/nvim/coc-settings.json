{
  "languageserver": {
    "rust": {
      "command": "rust-analyzer",
      "filetypes": ["rust"],
      "rootPatterns": ["Cargo.toml", "rust-project.json"],
      "initializationOptions": {
        "cargo": {
          "loadOutDirsFromCheck": true,
          "allFeatures": true,
          "autoReload": false
        },
        "procMacro": {
          "enable": true
        }
      }
    },
    "coc-clangd": {
      "command": "clangd",
      "args": ["--background-index", "--completion-style=detailed",
          "--header-insertion=never", "--inlay-hints=false", "--clang-tidy"],
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "initializationOptions": {
        "clangdFileStatus": true
      }
    },
  "java": {
      "command": "jdtls",
      "filetypes": ["java"],
      "rootPatterns": ["pom.xml", "build.gradle", "settings.gradle", ".project"],
      "settings": {
        "java": {
          "codeGeneration.hashCodeEquals.useInstanceof": true,
          "codeGeneration.useBlocks": true,
          "implementationsCodeLens.enabled": true,
          "referencesCodeLens.enabled": true,
          "format.settings.url": "/path/to/your/java-style.xml",
          "format.enabled": true,
          "configuration": {
            "runtimes": [
              {
                "name": "JavaSE-1.8",
                "path": "/path/to/jdk-8",
                "default": true
              },
              {
                "name": "JavaSE-11",
                "path": "/path/to/jdk-11"
              },
              {
                "name": "JavaSE-17",
                "path": "/path/to/jdk-17"
              },
              {
                "name": "JavaSE-21",
                "path": "/path/to/jdk-21"
              }
            ]
          }
        }
      }
    }
  },
  "suggest.maxCompleteItemCount": 5,
  "inlayHint.enable": false,
  "snippets.ultisnips.pythonPrompt": false
}
